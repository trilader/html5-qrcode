{
    "compilerOptions": {
        "target": "es5",
        "module": "node16",
        "sourceMap": true,
        "moduleResolution": "node16",
        "declaration": true,
        "lib": ["DOM", "ES2017", "ES2018"],

        // ^ Build the transpiled javascript to transpiled/ dir.
        // Flags to ensure code quality.
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "noImplicitAny": true,

        "skipLibCheck": true, // Need this because `node_modules/zxing-wasm/dist/cjs/reader/index.d.ts:1:28 - error TS1541: Type-only import of an ECMAScript module from a CommonJS module must have a 'resolution-mode' attribute.`

        // Allow javascript source to be built
        "allowJs": true
    },
    "files": [
        "src/index.ts"
    ],
    "paths": {
        "@scanapp/html5-qrcode": [
            "./dist"
        ],
        "@scanapp/html5-qrcode/*": [
            "./dist/*"
        ]
    }
}
